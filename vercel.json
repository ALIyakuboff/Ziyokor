{
    "version": 2,
    "installCommand": "pnpm install --no-frozen-lockfile",
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/web-portal/$1"
        }
    ],
    "outputDirectory": "apps/web-portal/dist"
}