{
    "version": 2,
    "buildCommand": "pnpm --filter work-control-portal build",
    "installCommand": "npx pnpm@9.15.4 install --no-frozen-lockfile",
    "outputDirectory": "apps/web-portal/dist",
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}