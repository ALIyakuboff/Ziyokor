{
    "version": 2,
    "buildCommand": "pnpm --filter work-control-portal build && cp -r ../web-portal/dist . && echo 'CHECK API:' && ls -F api && rm -f package-lock.json",
    "installCommand": "NODE_ENV=development npx pnpm@9.15.4 install --no-frozen-lockfile",
    "outputDirectory": "dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}