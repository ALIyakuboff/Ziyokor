{
    "version": 2,
    "buildCommand": "cd apps/web-portal && npm install --legacy-peer-deps && npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "outputDirectory": "apps/web-portal/dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}