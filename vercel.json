{
    "version": 2,
    "buildCommand": "pnpm install && pnpm run build --filter=work-control-portal",
    "installCommand": "pnpm install --no-frozen-lockfile",
    "outputDirectory": "apps/web-portal/dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}