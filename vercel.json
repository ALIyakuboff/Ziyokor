{
    "version": 2,
    "buildCommand": "cd apps/web-portal && ../../node_modules/.bin/vite build && cd ../.. && rm -rf dist && mkdir -p dist && mv apps/web-portal/dist/* dist",
    "installCommand": "NODE_ENV=development npx pnpm@9.15.4 install --no-frozen-lockfile",
    "outputDirectory": "dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/simple",
            "destination": "/api/simple"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}