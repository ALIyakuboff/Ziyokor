{
    "version": 2,
    "buildCommand": "npx turbo build --filter=work-control-portal --force && echo 'LS ROOT:' && ls -F && echo 'LS APP:' && ls -F apps/web-portal && echo 'LS APP DIST:' && ls -F apps/web-portal/dist && cp -r apps/web-portal/dist dist",
    "installCommand": "npx pnpm@9.15.4 install --no-frozen-lockfile",
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}