{
    "version": 2,
    "buildCommand": "pnpm --filter work-control-portal build",
    "installCommand": "NODE_ENV=development npx pnpm@9.15.4 install --no-frozen-lockfile",
    "outputDirectory": "apps/web-portal/dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/api/simple",
            "destination": "/api/simple"
        },
        {
            "source": "/api/debug-vercel",
            "destination": "/api/debug"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!assets/|.*\\..*|api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/close-day",
            "schedule": "0 0 * * *"
        }
    ]
}