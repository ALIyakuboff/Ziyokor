{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": ".",
        "outDir": "dist-api",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "api/**/*",
        "apps/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "apps/*/dist"
    ]
}